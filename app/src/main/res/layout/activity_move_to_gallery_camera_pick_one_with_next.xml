            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_move_to_gallery" />

        <TextView
            android:id="@+id/tv_move_to_camera"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:gravity="center|start"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_gallery_area_divider_line_second"
            android:text="@{LiveDataModel.isUpdate().testOne ?? `카메라로 이동`}"
            tools:text="카메라로 이동" />

        <View
            android:id="@+id/v_gallery_area_divider_line_third"

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="LiveDataModel"
            type="com.shoppi.app.ui.tutorials.entitytype.LiveDataModel" />

        <!--        <variable-->
        <!--            name="ScheduleDataModel"-->
        <!--            type="com.shoppi.app.ui.schedule.ScheduleDataModel" />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 일정(스케쥴) 작성 & 수정 액티비티 / p5. 여행일정2 -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shoppi_white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:visibility="visible"
            tools:visibility="visible"
            app:menu="@menu/menu_schedule_edit_topbar"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_scrollFlags="noScroll"
            app:navigationIcon="@drawable/ic_chevron_left"
            app:titleTextAppearance="@style/TextMedium.Bold"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bk"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            tools:visibility="invisible"
            android:alpha="0.001"
            android:contentDescription="@string/label_category"
            android:src="@drawable/ic_unreal_back_page_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sbmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:visibility="invisible"
            android:alpha="0.001"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:text="@string/btn_simple_complete_submit"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="완료" />


        <!--        <TextView-->
        <!--            android:id="@+id/tv_simple_complete_edit_submit"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:visibility="invisible"-->
        <!--            tools:visibility="invisible"-->
        <!--            android:textSize="20sp"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            android:text="@{LiveDataModel.isUpdate().testOne ?? `완료`}"-->
        <!--            tools:text="완료" />-->


        <EditText
            android:id="@+id/plain_text_input0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:maxWidth="320dip"
            tools:layout_width="320dp"
            android:layout_marginTop="80dp"
            android:autofillHints="name"
            android:background="@android:color/transparent"
            android:hint="@string/hint_schedule_name"
            android:inputType="text"
            tools:minHeight="38dp"
            tools:textSize="14sp"
            android:textSize="14sp"
            android:textColorHint="@color/shoppi_grey_11"
            android:fontFamily="@font/t_font_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/plain_text_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="40dp"
            android:maxWidth="320dip"
            tools:layout_width="320dp"
            android:autofillHints="name"
            android:background="@android:color/transparent"
            android:hint="@string/hint_location_search"
            android:inputType="text"
            tools:minHeight="38dp"
            tools:textSize="14sp"
            android:textSize="14sp"
            android:textColorHint="@color/shoppi_grey_11"
            android:fontFamily="@font/t_font_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plain_text_input0" />

        <EditText
            android:id="@+id/plain_text_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="40dp"
            android:maxWidth="320dip"
            tools:layout_width="320dp"
            android:autofillHints="name"
            android:background="@android:color/transparent"
            android:hint="@string/hint_schedule_time"
            android:inputType="text"
            tools:minHeight="38dp"
            tools:textSize="14sp"
            android:textSize="14sp"
            android:textColorHint="@color/shoppi_grey_11"
            android:fontFamily="@font/t_font_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plain_text_input1" />

        <EditText
            android:id="@+id/plain_text_input3"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:minHeight="92dp"
            tools:layout_width="320dp"
            tools:maxWidth="320dip"
            android:layout_marginStart="38dp"
            android:layout_marginTop="40dp"
            android:autofillHints="name"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="@string/et_hint_memo_value"
            android:inputType="textMultiLine"
            android:lines="4"
            tools:textSize="14sp"
            android:textSize="14sp"
            android:textColorHint="@color/shoppi_grey_11"
            android:fontFamily="@font/t_font_light"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plain_text_input2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
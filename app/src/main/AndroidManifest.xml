            android:exported="false" />
        <activity
            android:name=".ui.category.subwork.ProfileAddEditActivity"
            android:launchMode="singleTop"
            android:exported="false" />
        <activity
            android:name=".ui.category.subwork.ProfileCreateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.common.subnavi.MoveToGalleryCameraPickOneActivity"
            android:exported="false" />
        <activity
            android:name=".ui.feed.PictureWithMemoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.feed.PictureWithoutMemoActivity"
            android:exported="false" />
        <activity
